<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_marginTop="4dp"
    android:background="#2c436fac"
    android:orientation="vertical">

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prediction_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April"
                android:textColor="?android:textColorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prediction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discription here"
                android:visibility="gone"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/first_line_prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                android:text="First line"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/second_line_prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure: 0 hpa"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/third_line_prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="Humidity: 0 %"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/image_prediction"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="48dp" />

        <TextView
            android:id="@+id/item_detail_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Â°C"
            android:textSize="22dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/image_prediction"
            android:layout_alignRight="@+id/image_prediction"
            android:layout_alignEnd="@+id/image_prediction" />
    </RelativeLayout>
</LinearLayout>